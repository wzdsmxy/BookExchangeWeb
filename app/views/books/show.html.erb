<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:original),:class => "book-show" %>
  </div>
  <div class="col-md-8">
    <h2>Book title:<%=  @book.title  %></h2>
    <h3>Book price:<%= @book.price %></h3>
    <p>Book author:<%= @book.author %></p>
    <p>Book condition:<%= @book.condition %></p>
    <p>Book class:<%= @book.bookclass %></p>
    <p>Book edition:<%= @book.bookedition %></p>
    <p>Book description:<%= @book.description %></p>
    <p>Book ISBN:<%= @book.ISBN %></p>
    <p>Book seller:<%= @book.user.email %></p>
    <p>Book category:<%= @book.category.name %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    here is review!
  </div>
</div>
<%= link_to 'Back',list_path %>
<% if user_signed_in? %>
<% if @book.user_id == current_user.id %>
  <%= link_to 'Edit',edit_book_path(@book) %>
<%= link_to 'Delete',book_path(@book),method: :delete,data:{confirm: "Are You Sure?"} %>
<% end %>
<% end %>